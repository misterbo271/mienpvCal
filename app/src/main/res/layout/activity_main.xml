<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundColor"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="20dp">

        <TextView
            android:id="@+id/workingTextView"
            android:layout_width="365dp"
            android:layout_height="51dp"
            android:lines="2"
            android:maxLines="2"
            android:text=""
            android:textAlignment="textEnd"
            android:textColor="#52734D"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/resultsTextView"
            app:layout_constraintHorizontal_bias="0.652"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.553" />

        <TextView
            android:id="@+id/resultsTextView"
            android:layout_width="371dp"
            android:layout_height="81dp"
            android:lines="1"
            android:maxLines="1"
            android:text=""
            android:textAlignment="textEnd"
            android:textColor="@color/green"
            android:textSize="70sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        style="@style/btnRow">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:onClick="allClear"
            android:text="AC"
            android:textColor="@color/red"
            android:textSize="25sp" />

        <Button

            android:background="@null"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:textColor="@color/blurGreen"
            android:onClick="numberAction"
            android:text="+/-"/>
        <Button

            android:background="@null"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:textColor="@color/blurGreen"
            android:onClick="numberAction"
            android:text="%"/>
        <Button

            android:textColor="@color/red"
            android:onClick="delAction"
            android:layout_weight ="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background = "@null"
            android:textSize="25sp"


            android:text="DEL"/>

    </LinearLayout>
    <LinearLayout
        style="@style/btnRow">
        <Button
            android:background="@null"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:textColor="@color/lightBlue"
            android:onClick="numberAction"
            android:text="7"/>
        <Button

            android:background="@null"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:textColor="@color/lightBlue"
            android:onClick="numberAction"
            android:text="8"/>
        <Button

            android:background="@null"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:textColor="@color/lightBlue"
            android:onClick="numberAction"
            android:text="9"/>
        <Button

            android:layout_weight ="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background = "@null"
            android:textSize="25sp"
            android:textColor="@color/blurGreen"
            android:onClick="operationAction"
            android:text="/"/>

    </LinearLayout>
    <LinearLayout
        style="@style/btnRow">
        <Button
            android:background="@null"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:textColor="@color/lightBlue"
            android:onClick="numberAction"
            android:text="4"
            />
        <Button

            android:background="@null"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:textColor="@color/lightBlue"
            android:onClick="numberAction"
            android:text="5"/>
        <Button

            android:background="@null"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:textColor="@color/lightBlue"
            android:onClick="numberAction"
            android:text="6"/>
        <Button

            android:layout_weight ="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background = "@null"
            android:textSize="24sp"
            android:textColor="@color/blurGreen"
            android:onClick="operationAction"
            android:text="x"/>

    </LinearLayout>
    <LinearLayout
        style="@style/btnRow">
        <Button

            android:background="@null"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:textColor="@color/lightBlue"
            android:onClick="numberAction"
            android:text="1"/>
        <Button
            android:background="@null"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:textColor="@color/lightBlue"
            android:onClick="numberAction"
            android:text="2"/>
        <Button

            android:background="@null"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:textColor="@color/lightBlue"
            android:onClick="numberAction"
            android:text="3"/>
        <Button

            android:layout_weight ="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background = "@null"
            android:textSize="30sp"
            android:textColor="@color/blurGreen"
            android:onClick="operationAction"
            android:text="-"/>

    </LinearLayout>
    <LinearLayout
        style="@style/btnRow">
        <Button

            android:background="@null"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:textColor="@color/lightBlue"
            android:onClick="numberAction"
            android:text="0"/>
        <Button

            android:background="@null"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:textColor="@color/lightBlue"
            android:onClick="numberAction"
            android:text="."/>
        <Button

            android:background="#FF8c00"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:textSize="25sp"
            android:textColor="@color/lightBlue"

            android:onClick="equalsAction"
            android:text="="/>
        <Button

            android:layout_weight ="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background = "@null"
            android:textSize="25sp"
            android:textColor="@color/blurGreen"
            android:onClick="operationAction"
            android:text="+"/>

    </LinearLayout>


</LinearLayout>